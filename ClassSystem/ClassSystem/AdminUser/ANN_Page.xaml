        <Label Content="更新时间：" Height="28" HorizontalAlignment="Right" Margin="0,61,224,0" Name="label5" VerticalAlignment="Top" />
        <Button Content="修改" Height="23" HorizontalAlignment="Left" Margin="239,211,0,0" Name="BTN_infoAlt" VerticalAlignment="Top" Width="75" Click="BTN_infoAlt_Click" />
        <Button Content="修改" Height="23" HorizontalAlignment="Left" Margin="239,406,0,0" Name="BTN_taskAlt" VerticalAlignment="Top" Width="75" Click="BTN_taskAlt_Click" />
    </Grid>
</Page>
